<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello World!"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/bttnAdvertise"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onClickBttnAdvertise"
		android:text="Advertise"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/bttnDiscover"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onClickBttnDiscover"
		android:text="Discover"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/bttnAdvertise" />

	<Button
		android:id="@+id/bttnTrasmit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:layout_marginTop="8dp"
		android:onClick="onClickBttnTransmit"
		android:text="Trasmit"
		app:layout_constraintBottom_toTopOf="@+id/recyclerView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toEndOf="@+id/textInputLayout"
		app:layout_constraintTop_toBottomOf="@+id/bttnDiscover" />

	<android.support.design.widget.TextInputLayout
		android:id="@+id/textInputLayout"
		android:layout_width="277dp"
		android:layout_height="43dp"
		android:layout_marginTop="8dp"
		app:layout_constraintBottom_toTopOf="@+id/recyclerView"
		app:layout_constraintEnd_toStartOf="@+id/bttnTrasmit"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/bttnDiscover">

		<android.support.design.widget.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="hint" />
	</android.support.design.widget.TextInputLayout>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/recyclerView"
		android:layout_width="383dp"
		android:layout_height="377dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
		app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>